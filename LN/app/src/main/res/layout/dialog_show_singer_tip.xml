<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentWarp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="750dp"
        android:layout_height="420dp"
        android:background="@color/black"
        android:orientation="vertical">


        <View
            android:id="@+id/lineTop"
            style="@style/dialog_Line" />

        <TextView
            android:id="@+id/txtTltie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineTop"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="温馨提示"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtTltie"
            android:background="@color/gray_a6" />

        <TextView
            android:id="@+id/txtTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTltie"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:gravity="left"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_above="@+id/left"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/change_button_lock_bg_select"
            android:gravity="center"
            android:text=" 确认 "
            android:layout_centerHorizontal="true"
            android:textColor="@drawable/selector_item_text_color_for_focus"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            />

        <View
            android:id="@+id/lineBotttom"
            style="@style/dialog_Line"
            android:layout_alignParentBottom="true" />

        <View
            style="@style/dialog_Line_ver"
            android:layout_alignParentLeft="true"
            />

        <View
            style="@style/dialog_Line_ver"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</LinearLayout>