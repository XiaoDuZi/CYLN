<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_play_list"
    android:orientation="horizontal"
    tools:context="com.guanghua.ln.activitys.PlayListActivity">

    <LinearLayout
        android:id="@+id/ll_play_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="58dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="2"
        >

        <include
            layout="@layout/play_list_list"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_play_video_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="5">

        <include
            layout="@layout/play_list_video"/>
    </LinearLayout>
</LinearLayout>
