<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_play_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="播放列表"
        android:textSize="24sp"/>

    <ListView
        android:id="@+id/lv_play_list"
        android:layout_width="wrap_content"
        android:layout_height="540dp"
        android:layout_below="@+id/tv_play_list"
        android:layout_marginTop="16dp"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"
        android:focusable="true"
        android:listSelector="@drawable/play_list_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_list_page"
            android:src="@drawable/next_true"/>

        <TextView
            android:id="@+id/tv_list_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/tips_2"
            android:drawablePadding="14dp"
            android:textSize="24sp"/>
    </LinearLayout>

</RelativeLayout>
